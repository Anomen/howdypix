{
  "name": "@howdypix/app-worker",
  "version": "0.0.1",
  "description": "Process the pictures to extract information and create thumbnails.",
  "author": "Kevin Vicrey <kevin.vicrey@nexu.org>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "node build/index",
    "dev": "yarn build && wait-on http://localhost:15672 && DEBUG=app:* yarn watch",
    "watch": "yarn build --skip-initial-build --watch & nodemon build/index",
    "build": "babel src --out-dir build --extensions '.ts' --verbose",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {
    "@howdypix/shared-types": "^0.0.1",
    "@howdypix/utils": "^0.0.1",
    "@types/sharp": "^0.22.2",
    "amqplib": "^0.5.5",
    "dotenv": "^8.2.0",
    "exif": "^0.6.0",
    "lodash": "^4.17.15",
    "mkdirp": "^0.5.1",
    "sharp": "^0.23.0",
    "wait-on": "^3.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.0",
    "@howdypix/babel-preset": "^0.0.1",
    "@howdypix/eslint-config": "^0.0.1",
    "@howdypix/jest-config": "^0.0.1",
    "@howdypix/typescript-config": "^0.0.1",
    "@types/amqplib": "^0.5.13",
    "@types/exif": "^0.6.0",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.138",
    "@types/mkdirp": "^0.5.2",
    "@types/sharp": "^0.22.2",
    "eslint": " ^6.3.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "typescript": "^3.7.2"
  }
}
