{
  "name": "@howdypix/worker",
  "version": "0.1.0-alpha.0",
  "description": "Process the pictures to extract information and create thumbnails.",
  "repository": {
    "url": "git@github.com:vickev/howdypix.git"
  },
  "author": "Kevin Vicrey <kevin.vicrey@nexu.org>",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "howdypix-worker": "./bin/howdypix-worker.js"
  },
  "files": [
    "dist",
    "config",
    "bin"
  ],
  "scripts": {
    "start": "node dist/index",
    "dev": "yarn build && wait-on http://localhost:15672 && DEBUG=app:* yarn watch",
    "watch": "yarn build --skip-initial-build --watch & nodemon dist/index",
    "build": "babel src --out-dir dist --extensions '.ts' --verbose",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {
    "@howdypix/shared-types": "^0.0.3-alpha.0",
    "@howdypix/utils": "^0.0.3-alpha.4",
    "@types/sharp": "^0.22.2",
    "amqplib": "^0.5.5",
    "config": "^3.3.0",
    "dotenv": "^8.2.0",
    "exif": "^0.6.0",
    "lodash": "^4.17.15",
    "mkdirp": "^0.5.1",
    "sharp": "^0.23.0",
    "wait-on": "^3.3.0",
    "yaml": "^1.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.0",
    "@howdypix/babel-preset": "^0.0.3-alpha.0",
    "@howdypix/eslint-config": "^0.0.3-alpha.0",
    "@howdypix/jest-config": "^0.0.3-alpha.2",
    "@howdypix/typescript-config": "^0.0.3-alpha.0",
    "@types/amqplib": "^0.5.13",
    "@types/config": "^0.0.36",
    "@types/exif": "^0.6.0",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.138",
    "@types/mkdirp": "^0.5.2",
    "@types/sharp": "^0.22.2",
    "eslint": " ^6.3.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "typescript": "^3.7.2"
  }
}
