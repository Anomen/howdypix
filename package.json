{
  "name": "howdypix",
  "version": "0.1.0",
  "description": "Open-Source Photo Gallery.",
  "main": "index.js",
  "repository": "git@github.com:vickev/howdypix.git",
  "author": "Kevin Vicrey <kevin.vicrey@nexu.org>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap",
    "prettier": "prettier --write packages/**/*.{js,jsx,ts,tsx,json}",
    "lint": "lerna run lint && lerna run typecheck",
    "test": "lerna run test",
    "dev": "lerna run dev"
  },
  "devDependencies": {
    "husky": "^3.0.5",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  }
}
