{
  "name": "howdypix",
  "version": "0.1.0",
  "description": "Open-Source Photo Gallery.",
  "main": "index.js",
  "repository": "git@github.com:vickev/howdypix.git",
  "author": "Kevin Vicrey <kevin.vicrey@nexu.org>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap && yarn link-packages-because-of-lerna",
    "link-packages-because-of-lerna": "rm -rf node_modules/@typescript-eslint node_modules/typescript ; ln -s ../libs/eslint-config/node_modules/@typescript-eslint/ node_modules/ && ln -s ../libs/eslint-config/node_modules/typescript node_modules/",
    "prettier": "prettier --write packages/**/*.{js,jsx,ts,tsx,json}",
    "clean": "lerna clean -y && rm -rf node_modules",
    "lint": "lerna run lint && lerna run typecheck",
    "test": "lerna run test --stream --parallel",
    "test:e2e": "lerna run test:e2e --stream --scope '@howdypix/app-webapp' && lerna run test:e2e --stream --scope '@howdypix/app-server'",
    "watch": "lerna run dev --stream --parallel",
    "watch:apps": "lerna run dev --stream --parallel --scope '@howdypix/app-*'",
    "watch:services": "lerna run dev --stream --parallel --scope '@howdypix/service-*'",
    "watch:libs": "lerna run dev --stream --parallel --ignore '@howdypix/app-*' --ignore '@howdypix/service-*'",
    "dev": "yarn build:libs && yarn watch",
    "dev:apps": "yarn build:libs && yarn watch:apps",
    "dev:services": "yarn build:services && yarn watch:services",
    "dev:libs": "yarn build:libs && yarn watch:libs",
    "build": "yarn build:libs && yarn build:apps",
    "build:apps": "lerna run build --stream --parallel --scope '@howdypix/app-*'",
    "build:services": "lerna run build --stream --parallel --scope '@howdypix/service-*'",
    "build:libs": "lerna run build --stream --ignore '@howdypix/app-*' --ignore '@howdypix/service-*'"
  },
  "devDependencies": {
    "husky": "^3.0.5",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.5",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "babel-jest": "^24.9.0"
  }
}
